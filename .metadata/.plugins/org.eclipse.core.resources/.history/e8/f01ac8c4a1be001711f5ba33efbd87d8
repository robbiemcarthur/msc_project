import javax.swing.*;

//model class
/*
 * Wine class to store details of transactions including the name, price
 * and quantity of wines purchased.
 */
public class Wine 
{
	// instance variables
	private String name;
	private double price;
	private int quantity;

	public Wine()
	{
		// constructor method to initialise instance variables
		name = "wine";
		price = 0;
		quantity = 0;
	}
	
	// method to return wine name
	public String getName()
	{
		return name;
	}
	// method to return wine price
	public double getPrice()
	{
		return price;
	}
	//method to return wine quantity
	public int getQuantity()
	{
		return quantity;
	}
	
}
