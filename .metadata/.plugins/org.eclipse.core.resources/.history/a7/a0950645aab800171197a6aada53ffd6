import javax.swing.*;
import java.awt.*;

public class LWMGUI extends JFrame 
{
	//create JFrame GUI
	public LWMGUI() 
	{
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(500,500);
		setLocation(100,100);
		setTitle("Lilybank Wine Merchants");
	}
	// add buttons
	private JButton button1, button2;
	{
	button1 = new JButton ("Process Sale");
	this.add(button1, BorderLayout.CENTER);
	button1.setEnabled(true);

	button2 = new JButton ("Process Return");
	this.add(button2, BorderLayout.CENTER);
	button2.setEnabled(true);
}
}
